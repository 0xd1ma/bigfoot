<launch>

  <!-- Launch bf control driver node -->
  <node pkg="bf_driver" type="bf_driver" name="bf_driver" output="screen">
    <rosparam command="load" file="$(find bf_driver)/config/default.yaml" />
  </node>

  <!-- Robot tf -->
  <node pkg="tf" type="static_transform_publisher" name="base_link2laser" args="0.26 0 0.15 3.14159265359 0 0 base_link hokuyo_laser_frame 10" />
  <node pkg="tf" type="static_transform_publisher" name="base_link2imu" args="0.0 0 0.15 0 0 0 base_link imu 10" />
  <node pkg="tf" type="static_transform_publisher" name="base_footprint2base_link" args="0 0 -0.02 0 0 0 base_footprint base_link 10" />   	

  <!-- Launch hokuyo driver -->
  <include file="$(find urg_node)/launch/urg_lidar.launch" />

  <!-- Launch xsens driver -->
  <include file="$(find xsens_driver)/launch/xsens_driver.launch" />

  <!-- Launch localization -->
  <include file="$(find bf_localization)/launch/nst.launch" />

</launch>

